<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>
<addon id="plugin.audio.radiko"
			 name="Radiko"
			 version="0.0.12"
			 provider-name="xbmc_now">
	<requires>
		<import addon="xbmc.python" version="1.0"/>
		<import addon="script.module.pil" version="1.1.7"/>
	</requires>
	<extension point="xbmc.python.pluginsource" library="default.py">
		<provides>audio</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
		<platform>all</platform>
		<summary>Radiko plugin</summary>
		<description>http://xbmc.inpane.com</description>
		<disclaimer></disclaimer>
	</extension>
</addon>

<addon id="repository.japanese" name="Japanese XBMC Addons" version="1.0.0" provider-name="xbmc_now">
	<extension point="xbmc.addon.repository" name="Japanese XBMC Addon Repository">
		<info compressed="false">https://github.com/xbmc-now/japanese-xbmc-addons/tree/master/repo/addons.xml</info>
		<checksum>https://github.com/xbmc-now/japanese-xbmc-addons/tree/master/repo/addons.xml.md5</checksum>
		<datadir zip="true">https://github.com/xbmc-now/japanese-xbmc-addons/tree/master/repo/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary>Install Japanese Addons</summary>
		<description>Download and install Japanese addons</description>
		<platform>all</platform>
	</extension>
</addon>
</addons>
